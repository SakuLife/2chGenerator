# KIEAI API Key (画像生成に使用)
# https://kieai.net で取得
KIEAI_API_KEY=your_kieai_api_key_here
KIEAI_API_BASE=https://api.kieai.net

# Gemini API Key (台本生成に使用)
GEMINI_API_KEY=your_gemini_api_key_here

# YouTube Data API Key (競合分析、再生数取得に使用)
# Google Cloud Console で YouTube Data API v3 を有効化して取得
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Sheets ID (動画記録用スプレッドシート)
# スプレッドシートURLの /d/ と /edit の間の部分
GOOGLE_SHEETS_ID=your_spreadsheet_id_here

# Google Drive Folder ID (動画保存先フォルダ)
# フォルダURLの最後の部分
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# Google OAuth Client Secrets File (OAuth認証に使用)
# Google Cloud Console からダウンロード
GOOGLE_CLIENT_SECRETS_FILE=client_secrets.json

# Google Service Account JSON (サービスアカウント認証)
# Google Cloud Console からダウンロード
GOOGLE_SERVICE_ACCOUNT=path/to/service_account.json

# YouTube アップロード用 OAuth 認証情報（GitHub Actions用）
# ローカルでは client_secrets.json + 初回ブラウザ認証で自動取得
# GitHub Actions では以下の3つをSecrets に登録
# YT_CLIENT_ID=your_youtube_oauth_client_id
# YT_CLIENT_SECRET=your_youtube_oauth_client_secret
# YT_REFRESH_TOKEN=your_youtube_refresh_token
